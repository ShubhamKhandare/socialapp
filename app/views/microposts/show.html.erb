<% provide(:title,'Micropost') %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for current_user %>
				<%= current_user.name %>
			</h1>
		</section>
		<section class="stats">
      		 <%= render 'shared/stats' %>
    	</section>
		
	</aside>

	<div class="col-md-8">
		<%= render partial: 'microposts/micropost', locals: {micropost: @micropost} %>
		<% if @likers.count != 0 %>
			<% if !((@likers.count <= 1) && (@likers.first == current_user)) %>
				<h3>Likes from:</h3>
				<%= render @likers %>
				<%= will_paginate @likers %>
			<% end %>
		<% end %>

	</div>

</div>