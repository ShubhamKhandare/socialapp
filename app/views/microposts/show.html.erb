<% provide(:title,'Micropost') %>
<div class="row">
	<aside class="col-md-3">
		<div class="affix">
			<section class="user_info">
			<h1>
				<%= gravatar_for current_user %>
				<%= current_user.name %>
			</h1>
		</section>
		<section class="stats">
      		 <%= render 'shared/stats' %>
    	</section>
    	<section>
    		<% if @likers.count != 0 %>
    		
				<h3><%= "Like".pluralize(@likers.count) %> from:</h3>
				<%= render @likers %>
				<%= will_paginate @likers %>
			
		<% end %>
    	</section>
		</div>
		
	</aside>

	<div class="col-md-9">
		<%= render partial: 'microposts/micropost', locals: {micropost: @micropost} %>
	</div>

</div>
<script type="text/javascript">
$(document).ready(function(){
	$(".show-replies").click(function(){
		// console.log("clicked")
        $(this).next("#comments-ul").toggle();
    });});
</script>